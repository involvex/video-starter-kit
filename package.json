{
  "name": "fal-video-studio",
  "description": "A Video Editor",
  "version": "0.1.0",
  "author": "Involvex",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "format": "biome format . --write",
    "prepare": "husky",
    "electron:build:ts": "tsc -p electron/tsconfig.json",
    "electron:build": "npm run electron:build:ts",
    "electron:dev": "cross-env NODE_ENV=development wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "electron:dev:fast": "cross-env NODE_ENV=development electron .",
    "electron:start": "npm run electron:build && npm run electron:dev:fast",
    "electron:prod": "npm run electron:build && cross-env NODE_ENV=production electron .",
    "electron:pack": "npm run electron:build && electron-builder --dir",
    "electron:dist": "npm run build && npm run electron:build && electron-builder build --publish never",
    "electron-build": "electron-builder build --publish never"
  },
  "dependencies": {
    "@fal-ai/client": "^1.7.2",
    "@fal-ai/server-proxy": "^1.1.1",
