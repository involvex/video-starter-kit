    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "idb": "^8.0.3",
    "lucide-react": "^0.468.0",
    "nanoid": "^5.1.6",
    "next": "^16.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.66.1",
    "react-hotkeys-hook": "^4.6.2",
    "remotion": "4.0.249",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "throttle-debounce": "^5.0.2",
    "uploadthing": "^7.7.4",
    "waveform-path": "^0.0.2",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
